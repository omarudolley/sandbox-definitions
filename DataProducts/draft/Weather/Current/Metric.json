  "components": {
    "schemas": {
      "BadGateway": {
        "title": "BadGateway",
        "type": "object",
        "properties": {},
        "description": "This response is reserved by Product Gateway."
      },
      "CurrentWeatherMetricRequest": {
        "title": "CurrentWeatherMetricRequest",
        "required": ["lat", "lon"],
        "type": "object",
        "properties": {
          "lat": {
            "title": "Latitude",
            "maximum": 90.0,
            "minimum": -90.0,
            "type": "number",
            "description": "The latitude coordinate of the desired location",
            "example": 60.192059
          },
          "lon": {
            "title": "Longitude",
            "maximum": 180.0,
            "minimum": -180.0,
            "type": "number",
            "description": "The longitude coordinate of the desired location",
            "example": 24.945831
          }
        }
      },
      "CurrentWeatherMetricResponse": {
        "title": "CurrentWeatherMetricResponse",
        "required": [
          "humidity",
          "pressure",
          "rain",
          "temp",
          "windSpeed",
          "windDirection"
        ],
        "type": "object",
        "properties": {
          "humidity": {
            "title": "Current relative air humidity in %",
            "type": "number",
            "example": 72
          },
          "pressure": {
            "title": "Current air pressure in hPa",
            "type": "number",
            "example": 1007
          },
          "rain": {
            "title": "Rain status",
            "type": "boolean",
            "description": "If it's currently raining or not."
          },
          "temp": {
            "title": "Current temperature in Celsius",
            "minimum": -273.15,
            "type": "number",
            "example": 17.3
          },
          "windSpeed": {
            "title": "Current wind speed in m/s",
            "minimum": 0.0,
            "type": "number",
            "example": 2.1
          },
          "windDirection": {
            "title": "Current wind direction in meteorological wind direction degrees",
            "maximum": 360.0,
            "minimum": 0.0,
            "type": "number",
            "example": 220.0
          }
        }
      },
      "DataSourceError": {
        "title": "DataSourceError",
        "required": ["type", "message"],
        "type": "object",
        "properties": {
          "type": {
